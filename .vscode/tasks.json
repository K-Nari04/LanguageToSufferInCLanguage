{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
           "type": "shell",
           "command": "gcc",
           "args": [
               "${file}",
               "-Werror",
               "-Wextra",
               "-Wall",
               "-g",
               "-O0",
               "-o sum.c",
               "${fileBasenameNoExtension}.exe",
               "-L.",
               "-I.",


           ],
           "group": {
               "kind": "build",
               "isDefault": true
           }
       }
   ]

}